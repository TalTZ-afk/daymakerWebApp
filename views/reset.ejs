<%- include (header) -%>

<body>
  <div class="container">
      <div class="jumbotron">
        <h1 class="display-4"><%=title%></h1>
        <hr class="my-4">
        <form action="/reset/<%=token%>" method="post">
          <div class="form-group">
            <input class="form-control <%=passwordErrValidation1%>" id="validationPassword01" type="password" name="password" placeholder="<%=password%>">
            <div class="invalid-feedback">
              <p><%=passwordErrMsg1%><br><%=passwordErrMsg2%><br><%=passwordErrMsg3%></p>
            </div>
          </div>
          <div class="form-group">
            <input class="form-control <%=passwordErrValidation2%>" id="validationPassword02" type="password" name="passwordConfirm" placeholder="<%=passwordConfirm%>">
            <div class="invalid-feedback">
              <p><%=passwordErrMsg4%></p>
            </div>
          </div>
          <button type="submit" class="btn btn-dark btn-sm forgot-btn" role="button"><%=button%></button>
        </form>
      </div>
  </div>
</body>
</html>
