<%- include (header) -%>

<body>
  <div class="dropdown dropdown-container">
      <button class="btn btn-dark dropdown btn-dropdown" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-sliders-h"></i>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="/home/en-us">English</a>
          <a class="dropdown-item" href="/home/he-il">עברית</a>
      </div>
  </div>
  <div class="container">
    <div class="alert alert-success" role="alert" style="display: <%=passwordChanged%>;">
      <%=passwordChangedMsg%>
    </div>
    <img class="logo-img" src="/images/logo.png" alt="logo">
    <h1 class="display-3">Daymaker</h1>
    <p class="lead"><%=lead%></p>
    <div class="row">
      <div class="col-lg-5">
        <div class="card">
          <div class="card-body">
            <form action="<%=postLogin%>" method="post">
              <div class="form-group">
                <input type="email" class="form-control <%=loginIsInvalid%>" id="validationEmail01" name="username" placeholder="<%=email%>" required>
              </div>
              <div class="form-group">
                <input type="password" class="form-control <%=loginIsInvalid%>" id="validationPassword01" name="password" placeholder="<%=password%>" required>
                <div class="invalid-feedback">
                  <p><%=loginErrMsg%></p>
                </div>
              </div>
              <div class="forgot-pass-div">
                <a class="forgot-pass" href="/forgot"><%=forgotPassword%></a>
              </div>
              <button type="submit" class="btn btn-dark"><%=login%></button>
            </form>
              <a class="btn btn-social btn-google btn-block" href="/auth/google" role="button">
                <i class="fab fa-google un-flip"></i>
                  <%=loginGoogle%>
              </a>
          </div>
        </div>
      </div>
      <div class="hr-div">
        <hr class="vertical-hr">
        <p><%=or%></p>
        <hr class="vertical-hr">
      </div>
      <div class="col-lg-5">
        <div class="card">
          <div class="card-body">
            <form action="<%=postRegister%>" method="post">
              <div class="form-group">
                <input type="text" class="form-control" name="fullName" placeholder="<%=fullName%>" required>
              </div>
              <div class="form-group">
                <input type="email" class="form-control <%=emailIsInvalid%>" id="validationEmail02" name="username" placeholder="<%=email%>" required>
                <div class="invalid-feedback">
                  <p><%=emailErrMsg%></p>
                </div>
              </div>
              <div class="form-group">
                <input type="password" class="form-control <%=passwordIsInvalid%>" id="validationPassword02" name="password" placeholder="<%=password%>" required>
                <div class="invalid-feedback">
                  <p><%=passwordErrMsg1%><br><%=passwordErrMsg2%><br><%=passwordErrMsg3%></p>
                </div>
              </div>
              <button type="submit" class="btn btn-dark"><%=register%></button>
            </form>
            <a class="btn btn-social btn-google btn-block" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              <%=registerGoogle%>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
